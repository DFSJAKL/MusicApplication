@model Model.Manager
@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Login Form</title>

    
    <link href="~/Content/New/css/style2.css" rel="stylesheet" />

 

    <script src="https://cdnjs.cloudflare.com/ajax/libs/prefixfree/1.0.7/prefixfree.min.js"></script>

</head>

<body   >

    <div class="login">
        <h1>Login</h1>
        @using (Html.BeginForm("Login", "Manager", FormMethod.Post))
        {
            @Html.ValidationSummary("");

            <div>
                <div class="form-group">
                    <label class="control-label">管理员名</label>
                    @Html.TextBoxFor(manager => manager.mana_name, new { @class = "form-control", placeholder = "请输入昵称" })
                </div>
                <div class="form-group">
                    <label class="control-label">管理员密码</label>
                    @Html.PasswordFor(manager => manager.mana_pwd , new { @class = "form-control", placeholder = "请输入昵称" })
                </div>


                <div class="form-group btn-container">
                    <i class="fa fa-sign-in fa-lg fa-fw">
                    </i>
                    <input type="submit" value="登录" class="btn btn-primary btn-block" />
                </div>
            </div>

        }
    </div>



   
    <script src="~/Content/New/js/index2.js"></script>



</body>

</html>


