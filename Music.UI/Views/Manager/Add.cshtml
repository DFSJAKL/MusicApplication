@model Model.Manager


@using Model
@{
  
    //Layout = "~/ Views / Shared / _LayoutManager.cshtml";
    Layout = "~/Views/Shared/_LayoutManager.cshtml";

}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index1</title>
</head>
<body>
    <div>
        <div class="page-content">
            <!-- BEGIN SAMPLE PORTLET CONFIGURATION MODAL FORM-->
            <div id="portlet-config" class="modal hide">
                <div class="modal-header">
                    <button data-dismiss="modal" class="close" type="button"></button>
                    <h3>Widget Settings</h3>
                </div>
                <div class="modal-body">
                    <p>Here will be a configuration form</p>
                </div>
            </div>
            <!-- END SAMPLE PORTLET CONFIGURATION MODAL FORM-->
            <div class="container-fluid">
                <!-- BEGIN PAGE HEADER-->
                <div class="row-fluid">

                    @using (Html.BeginForm("Add", "Manager", FormMethod.Post, new { enctype = "multipart/form-date" }))
                    {
                        @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h4>Manager</h4>
                        <div style="float:right;">
                            @Html.ActionLink("返回主页", "Index1")
                        </div>
                        <br />
                        <hr />
                        <div style="margin-left:350px;">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                管理员名：
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.mana_name, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.mana_name, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <br />
                            <div class="form-group">
                                管理员密码：
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.mana_pwd, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.mana_pwd, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <br />
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10" style="margin-left:125px;">
                                    <input type="submit" value="创建管理员" class="btn btn-default" />
                                </div>
                            </div>
                        </div>

                    </div>
                    }

                   
                    
                </div>
            </div>
            <!-- END PAGE HEADER-->
            <!-- Begin page-->
            <div class="ui-widget ui-helper-clearfix">

            </div>
            <!-- END page-->

        </div>
        <!-- END PAGE CONTAINER-->
    </div>
    s
</body>
</html>
