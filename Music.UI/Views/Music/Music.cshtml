@using PagedList.Mvc;
@model PagedList.IPagedList<Model.Music1>
@{
    Layout = null;
}

<div class="col-md-9 technology-left">
    <div>
        <h2>音乐列表</h2>
        <div>
            <ul>
                @foreach (var p in Model)
                {
                    <li>
                        <div class="blog-grids wow fadeInDown" data-wow-duration=".8s" data-wow-delay=".2s">
                            <div class="blog-grid-left">
                                <a href="@Url.Action("Details","Music",new {id=p.music_id})"><img src="@p.music_image" class="img-responsive"  width="150" height="100"></a>
                            </div>
                            <div class="blog-grid-right">

                                <h5><a href="@Url.Action("Details","Music",new {id=p.music_id})">@p.music_name </a> </h5>
                            </div>
                            <div class="clearfix"> </div>
                        </div>
                    </li>
                }
            </ul>
        </div>
        <div>
            <div>
                Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
            </div>
            <div>
                @Html.PagedListPager(Model, page => Url.Action("Index", "Index", new { page }))
            </div>
        </div>
    </div>
</div>