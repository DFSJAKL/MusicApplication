@using PagedList.Mvc;
@model PagedList.IPagedList<Model.Articles>
@{
    ViewBag.Title = "Articles";
    Layout = null;
}
<!DOCTYPE html>
<style>
</style>
<div 
     >
    <div>

    </div>
    <div>
        <h2>文章列表</h2>
        <div>
            <ul>
                @foreach (var p in Model)
                {
                    <li>
                        <div>
                            <a href="@Url.Action("Details",new {id=p.art_id})">
                                <img width="100" height="100" src="@p.art_image" />
                            </a>
                        </div>

                        <div>
                            @p.art_mess
                        </div>
                        <div>
                            @p.art_time
                        </div>
                    </li>
                }
            </ul>
        </div>
        <div>
            <div>
                Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
            </div>
            <div>
                @Html.PagedListPager(Model, page => Url.Action("Index", "Articles", new { page }))
            </div>
        </div>
    </div>
</div>