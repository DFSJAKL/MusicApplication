
@using Model;
@model Music.UI.ViewModel.ArticlesViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE HTML>
<html>
<head>
    <title>新闻</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="" />
    <script type="applijewelleryion/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>

    <link href="~/Content/New/css/bootstrap.css" rel="stylesheet" />
    <!-- Custom Theme files -->
    <link href='http://fonts.useso.com/css?family=Raleway:400,600,700' rel='stylesheet' type='text/css'>

    <link href="~/Content/New/css/style.css" rel="stylesheet" />
    <script src="~/Content/New/js/jquery-1.11.1.min.js"></script>

    <script src="~/Content/New/js/bootstrap.min.js"></script>
    
</head>
<body>
    
    <!--start-main-->
    <div class="header-bottom">
        <div class="container">
            <div class="logo">
                <h1><a href="index.html">STYLE BLOG</a></h1>
                <p><label class="of"></label>LET'S MAKE A PERFECT STYLE<label class="on"></label></p>
            </div>
        </div>
    </div>
    <!-- banner -->

    <div class="banner-1">

    </div>

    <!-- technology-left -->
    <div class="technology">
        <div class="container">
            <div class="col-md-9 technology-left">
                <div class="blog">

                    <h2 class="w3">NEWS</h2>
                    <div class="blog-grids1">
                        <div class="col-md-6 blog-grid">
                            @foreach (var p in Model.Articles2)
                            {

                                <div class="blog-grid-left1">
                                    <a href="singlepage.html"><img src="@p.art_image" class="img-responsive" alt=""></a>
                                </div>
                                <div class="blog-grid-right1">
                                    <a href="singlepage.html"><a href="@Url.Action("Details", "Articles", new { id = p.art_id })">@p.art_mess </a></a>
                                </div>
                                <div class="clearfix"> </div>
                                <div class="more m1">
                                    <a class="btn effect6" href="singlepage.html">Learn More</a>
                                </div>
                            }
                            </div>
                            
                        <div class="clearfix"> </div>
                    </div>
                  
                    <nav class="paging">

                       <div style="float:right;">
                            <div>
                                Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
                            </div>
                            <div>
                                @Html.PagedListPager(Model, page => Url.Action("Index", "Music", new { page }))
                            </div>
                        </div>
                        

                    </nav>

                </div>
            </div>
            <!-- technology-right -->
            <div class="col-md-3 technology-right">


                <div class="blo-top1">

                    <div class="tech-btm">
                        <div class="search-1 wow fadeInDown" data-wow-duration=".8s" data-wow-delay=".2s">
                            <form action="#" method="post">
                                <input type="search" name="Search" value="Search" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Search';}" required="">
                                <input type="submit" value=" ">
                            </form>
                        </div>
                        <h4>最新音乐 </h4>
                        @foreach (var p in Model.Msuic2)
                        {
                            <div class="blog-grids wow fadeInDown" data-wow-duration=".8s" data-wow-delay=".2s">
                                <div class="blog-grid-left">
                                    <a href="singlepage.html"><img src="@p.music_image" class="img-responsive" alt=""></a>
                                </div>
                                <div class="blog-grid-right">

                                    <h5><a href="singlepage.html"><a href="@Url.Action("Details","Music",new {id=p.music_id})">@p.music_mess </a></a> </h5>
                                </div>
                                <div class="clearfix"> </div>
                            </div>
                        }
                    </div>

                    <div class="insta wow fadeInDown" data-wow-duration=".8s" data-wow-delay=".2s">
                        <h4>最新歌单</h4>

                        @foreach (var p in Model.List)
                        {
                            <div class="blog-grids wow fadeInDown" data-wow-duration=".8s" data-wow-delay=".2s">
                                <div class="blog-grid-left">
                                    <a href="singlepage.html"><img src="@p.list_image" class="img-responsive" alt=""></a>
                                </div>
                                <div class="blog-grid-right">

                                    <h5><a href="singlepage.html"><a href="@Url.Action("Details","List",new {id=p.list_id})">@p.list_mess </a></a> </h5>
                                </div>
                                <div class="clearfix"> </div>
                            </div>
                        }

                    </div>


                </div>



            </div>


        </div>
        <div class="clearfix"></div>
        <!-- technology-right -->
    </div>
    
   
</body>
</html>