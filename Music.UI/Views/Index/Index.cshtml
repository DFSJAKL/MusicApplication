@using Model
@model Music.UI.ViewModel.IndexViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*@section head{
    }*@
<!DOCTYPE HTML>
<html>
<head>
    <title>音乐人生</title>
</head>
<body>
    <div class="banner">
        <div class="container">
            <h2>Contrary to popular belief, Lorem Ipsum simply</h2>
            <p>Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make Lorem Ipsum has been the industry's standard dummy text ever since the 1500s</p>
            <a href="singlepage.html">READ MORE</a>
        </div>
    </div>

    <div class="services w3l wow fadeInDown" data-wow-duration=".8s" data-wow-delay=".2s">
        <div class="container">
            <div class="grid_3 grid_5">
                <div class="bs-example bs-example-tabs" role="tabpanel" data-example-id="togglable-tabs">
                    <ul id="myTab" class="nav nav-tabs" role="tablist">
                        <li role="presentation" class="active"><a href="#expeditions" id="expeditions-tab" role="tab" data-toggle="tab" aria-controls="expeditions" aria-expanded="true">最新音乐</a></li>
                        <li role="presentation" class=""><a href="#safari" role="tab" id="safari-tab" data-toggle="tab" aria-controls="safari">歌曲人生</a></li>
                        <li role="presentation" class=""><a href="#trekking" role="tab" id="trekking-tab" data-toggle="tab" aria-controls="trekking">歌单荟萃</a></li>
                    </ul>
                    <div id="myTabContent" class="tab-content">
                        <div role="tabpanel" class="tab-pane fade" id="expeditions" aria-labelledby="expeditions-tab">
                            <div class="col-md-4 col-sm-5 tab-image">
                                <img src="~/Content/New/images/f2.jpg" class="img-responsive" alt="Wanderer">
                            </div>
                            <div class="col-md-4 col-sm-5 tab-image">
                                <img src="~/Content/New/images/f4.jpg" class="img-responsive" alt="Wanderer">
                            </div>
                            <div class="col-md-4 col-sm-5 tab-image">
                                <img src="~/Content/New/images/f3.jpg" class="img-responsive" alt="Wanderer">
                            </div>
                            <div class="clearfix"></div>
                        </div>
                        <div role="tabpanel" class="tab-pane fade" id="safari" aria-labelledby="safari-tab">
                            <div class="col-md-4 col-sm-5 tab-image">
                                <img src="~/Content/New/images/t1.jpg" class="img-responsive" alt="Wanderer">
                            </div>
                            <div class="col-md-4 col-sm-5 tab-image">
                                <img src="~/Content/New/images/t2.jpg" class="img-responsive" alt="Wanderer">
                            </div>
                            <div class="col-md-4 col-sm-5 tab-image">
                                <img src="~/Content/New/images/t3.jpg" class="img-responsive" alt="Wanderer">
                            </div>
                            <div class="clearfix"></div>
                        </div>
                        <div role="tabpanel" class="tab-pane fade active in" id="trekking" aria-labelledby="trekking-tab">

                            <div class="col-md-4 col-sm-5 tab-image">
                                <img src="~/Content/New/images/m2.jpg" class="img-responsive" alt="Wanderer">
                            </div>
                            <div class="col-md-4 col-sm-5 tab-image">
                                <img src="~/Content/New/images/m1.jpg" class="img-responsive" alt="Wanderer">
                            </div>
                            <div class="col-md-4 col-sm-5 tab-image">
                                <img src="~/Content/New/images/m3.jpg" class="img-responsive" alt="Wanderer">
                            </div>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- technology-left -->
    <div class="technology">
        <div class="container">
            <div class="col-md-9 technology-left">
                <div class="tech-no">
                    <!-- technology-top -->

                    <div class="tc-ch wow fadeInDown" data-wow-duration=".8s" data-wow-delay=".2s">
                        @foreach (var p in Model.Articles2)
                        {
                            <div class="blog-grids wow fadeInDown" data-wow-duration=".8s" data-wow-delay=".2s">
                                <div class="blog-grid-left">
                                    <a href="singlepage.html"><img src="@p.art_image" class="img-responsive" alt=""></a>
                                </div>
                                <div class="blog-grid-right">

                                    <h5><a href="singlepage.html"><a href="@Url.Action("Details","Articles",new {id=p.art_id})">@p.art_mess </a></a> </h5>
                                </div>
                                <div class="clearfix"> </div>
                            </div>
                        }

                        <div class="clearfix"></div>
                    </div>
                    <div class="clearfix"></div>
                    <!-- technology-top -->
                    
                </div>
            </div>
            <!-- technology-right -->
            <div class="col-md-3 technology-right">


                <div class="blo-top1">

                    <div class="tech-btm">
                        <div class="search-1 wow fadeInDown" data-wow-duration=".8s" data-wow-delay=".2s">
                            <form action="#" method="post">
                                <input type="search" name="Search" value="Search" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Search';}" required="">
                                <input type="submit" value=" ">
                            </form>
                        </div>
                        <h4>最新音乐 </h4>
                        @foreach (var p in Model.Msuic2)
                        {
                            <div class="blog-grids wow fadeInDown" data-wow-duration=".8s" data-wow-delay=".2s">
                                <div class="blog-grid-left">
                                    <a href="singlepage.html"><img src="@p.music_image" class="img-responsive" alt=""></a>
                                </div>
                                <div class="blog-grid-right">

                                    <h5><a href="singlepage.html"><a href="@Url.Action("Details","Music",new {id=p.music_id})">@p.music_name </a></a> </h5>
                                </div>
                                <div class="clearfix"> </div>
                            </div>
                        }
                    </div>

                    <div class="insta wow fadeInDown" data-wow-duration=".8s" data-wow-delay=".2s">
                        <h4>最新歌单</h4>

                        @foreach (var p in Model.List)
                        {
                            <div class="blog-grids wow fadeInDown" data-wow-duration=".8s" data-wow-delay=".2s">
                                <div class="blog-grid-left">
                                    <a href="singlepage.html"><img src="@p.list_image" class="img-responsive" alt=""></a>
                                </div>
                                <div class="blog-grid-right">

                                    <h5><a href="singlepage.html"><a href="@Url.Action("Details","List",new {id=p.list_id})">@p.list_mess </a></a> </h5>
                                </div>
                                <div class="clearfix"> </div>
                            </div>
                        }
                       
                    </div>

                    
                </div>



                </div>


            </div>
            <div class="clearfix"></div>
            <!-- technology-right -->
        </div>
   

    

</body>
</html>
